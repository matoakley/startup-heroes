<div class="blog-title">
  <h1><%= current_article.title %></h1>

  <div>
    <%= link_to current_page.data.author, current_page.data.author_link %> - <%= current_article.date.strftime("%-d %B %Y") %>
  </div>
</div>

<%= image_tag "blog/#{current_article.date.strftime("%Y-%m-%d")}-#{current_article.slug}.jpg", alt: current_article.title, class: 'blog-image blog-image--main' %>
